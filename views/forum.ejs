<!-- This is the forum page where users can post tips and share achievements -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forum Page</title>
    <link rel="stylesheet"  type="text/css" href="/home.css" /> <!-- Linking to the CSS stylesheet -->
</head>
<body>
  <nav class="navbar"> <!-- Adding a navigation bar -->
    <ul>
      <li><a href="/home">Home</a></li>
      <li><a href="/impact">Impact</a></li>
      <li><a href="/locator">Locator</a></li>
      <li><a href="/forum">Forum</a></li>
      <li><a href="/leaderboard">Leaderboard</a></li>
      <li><a href="/users/logout">Logout</a></li>
    </ul>
  </nav>
  <h1>SmartWaste</h1>
  <div>
    <h2>Forum</h2>
    <p>Share your achievements and tips by posting below!</p>
    <!-- Form to submit a new post -->
    <form method="POST" action="/forum/post">
        <textarea name="content" rows="4" cols="50" placeholder="Enter your post here..." required></textarea><br>
        <button type="submit">Post</button>
    </form>
    <!-- Displaying existing posts -->
    <% posts.forEach(post => { %>
        <p><strong><%= post.username %></strong> on <%= post.date %> - "<%= post.content %>"</p>
    <% }) %>
  </div>
</body>
</html>